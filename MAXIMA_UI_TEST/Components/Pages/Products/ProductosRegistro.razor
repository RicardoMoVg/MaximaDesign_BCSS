@page "/productos/registro"
@rendermode InteractiveServer
@using MaximaDesignSystem
@using MaximaDesignSystem.MB_Library
@inject NavigationManager Navigation

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Datos de producto</h2>
        <MbButton Color="MbButton.ButtonColor.Light" Class="border">
            Editar <i class="bi bi-pencil ms-2"></i>
        </MbButton>
    </div>

    <div class="card shadow-sm border-0 overflow-hidden" style="min-height: 600px;">
        <div class="row g-0 h-100">
            
            <div class="col-md-2 border-end bg-light">
                <FormSideNav 
                    Opciones="PasosDelFormulario"
                    OpcionSeleccionada="@PasoActual"
                    OnSeleccion="CambiarPaso" />
            </div>

            <div class="col-md-10 bg-white p-5">
                
                <h4 class="fw-bold text-dark mb-4">@PasoActual</h4>
                <hr class="mb-4 text-muted opacity-25" />

                @if (PasoActual == "Identificadores de producto")
                {
                    <div class="animate-fade-in">
                        <div class="p-4 rounded border" style="background-color: #f8f9fa;">
                            <form>
                                <div class="mb-3 row align-items-center">
                                    <label class="col-sm-3 col-form-label fw-bold text-end">Comercio <span class="text-danger">*</span></label>
                                    <div class="col-sm-9">
                                        <select class="form-select border-0 shadow-sm">
                                            <option>Comercio para el que se compra...</option>
                                            <option>Amazon</option>
                                            <option>Walmart</option>
                                        </select>
                                        <div class="form-text text-muted small mt-1">Comercio para el que se compra el producto.</div>
                                    </div>
                                </div>

                                <div class="mb-3 row align-items-center">
                                    <label class="col-sm-3 col-form-label fw-bold text-end">ASIN <span class="text-danger">*</span></label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control border-0 shadow-sm" placeholder="">
                                        <div class="form-text text-muted small mt-1">Identificador único de Amazon.</div>
                                    </div>
                                </div>
                                
                                <div class="mb-3 row align-items-center">
                                    <label class="col-sm-3 col-form-label fw-bold text-end">FNSKU <span class="text-danger">*</span></label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control border-0 shadow-sm" placeholder="">
                                        <div class="form-text text-muted small mt-1">Identificador interno de inventario.</div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                }
                else if (PasoActual == "Detalles básicos")
                {
                    <div class="alert alert-light border">Contenido de Detalles Básicos...</div>
                }
                else
                {
                    <div class="d-flex flex-column align-items-center justify-content-center h-50 text-muted">
                        <i class="bi bi-cone-striped fs-1 mb-3"></i>
                        <p>El formulario para <strong>@PasoActual</strong> está en construcción.</p>
                    </div>
                }

                <div class="d-flex justify-content-end mt-5 pt-3 border-top">
                    <MbButton Color="MbButton.ButtonColor.Dark" Class="px-4 py-2 rounded-pill">
                        Siguiente <i class="bi bi-chevron-right ms-2"></i>
                    </MbButton>
                </div>

            </div> </div>
    </div>
</div>

@code {
    private string PasoActual = "Identificadores de producto";

    private List<string> PasosDelFormulario = new()
    {
        "Identificadores de producto",
        "Detalles básicos",
        "Imágenes del producto",
        "Presentación",
        "Precios de venta",
        "Descripciones",
        "Atributos del producto",
        "Datos de Importación"
    };

    private void CambiarPaso(string nuevoPaso)
    {
        PasoActual = nuevoPaso;
    }
}