@page "/productos-dashboard"
@rendermode InteractiveServer
@using MaximaDesignSystem
@inject NavigationManager Navigation


<div class="dashboard-container">

    <div class="left-column">
        <div class="card white-card tall-card centered-content">
            <h3 class="card-title-dark">Centro de acciones y alertas</h3>

            <div class="alert-placeholder">
                No hay alertas nuevas.
            </div>
        </div>
    </div>


    <div class="right-column">

        <div class="stats-grid">
            <div class="card dark-card stat-card">
                <span class="stat-label">Valor Compras</span>
                <span class="stat-value">$0</span>
            </div>
            <div class="card dark-card stat-card">
                <span class="stat-label">Órdenes de compra</span>
                <span class="stat-value">0</span>
            </div>
            <div class="card dark-card stat-card">
                <span class="stat-label">Proveedores</span>
                <span class="stat-value">0</span>
            </div>
            <div class="card dark-card stat-card">
                <span class="stat-label">Suscripciones activas</span>
                <span class="stat-value">0</span>
            </div>
        </div>


        <div>
            <h4 class="section-header">Atajos a Operaciones Frecuentes</h4>
            <div class="shortcuts-grid">
                <button class="card white-card shortcut-btn">
                    <div class="icon-container blue-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="24px" height="24px"><path d="M3 13h2v-2H3v2zm0 4h2v-2H3v2zm0-8h2V7H3v2zm4 4h14v-2H7v2zm0 4h14v-2H7v2zM7 7v2h14V7H7z" /></svg>
                    </div>
                    <span>Catálogo</span>
                </button>

                <button class="card white-card shortcut-btn" @onclick="IrARegistro">
                    <div class="icon-container green-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="32px" height="32px">
                            <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" />
                        </svg>
                    </div>
                    <span>Registrar Producto</span>
                </button>

                <button class="card white-card shortcut-btn">
                    <div class="icon-container purple-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="24px" height="24px"><path d="M9 16h6v-6h4l-7-7-7 7h4v6zm-4 2h14v2H5v-2z" /></svg>
                    </div>
                    <span>Carga Masiva</span>
                </button>

                <button class="card white-card shortcut-btn">
                    <div class="icon-container orange-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="24px" height="24px"><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z" /></svg>
                    </div>
                    <span>Reportes</span>
                </button>
            </div>
        </div>


        <div class="card white-card">
            <h3 class="card-title-dark no-margin-bottom">Compras Automáticas (Suscripciones)</h3>
            <div class="gray-placeholder-box"></div>
        </div>

    </div>
</div>

@code {
    // 3. Método que ejecuta la navegación
    private void IrARegistro()
    {
        // Asegúrate de que esta ruta coincida con el @page de tu archivo destino
        Navigation.NavigateTo("/registro-compras");
    }
}