        new ProductoItem { Nombre = "Mouse Logitech", Categoria = "Periféricos", Stock = 56, Precio = 12.99m },
        new ProductoItem { Nombre = "Teclado Mecánico", Categoria = "Periféricos", Stock = 32, Precio = 89.00m },
    };
}
