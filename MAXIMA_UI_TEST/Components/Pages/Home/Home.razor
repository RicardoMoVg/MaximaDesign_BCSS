@page "/home"
@rendermode InteractiveServer
@using MaximaDesignSystem
@using MaximaDesignSystem.MB_Library
@inject NavigationManager Navigation

<PageTitle>Centro de Tareas</PageTitle>

<div class="container-fluid p-0 h-100 d-flex flex-column">
    
    <div class="d-flex justify-content-between align-items-center mb-3 flex-shrink-0">
        <h2 class="fw-bold text-dark m-0">Centro de tareas</h2>
    </div>

    <div class="row g-4 flex-grow-1 pb-3" style="min-height: 0;">
        
        <div class="col-lg-4 h-100">
            <div class="card white-card h-100 p-3 d-flex flex-column">
                
                <div class="d-flex gap-2 mb-3 flex-shrink-0">
                    <button class="btn btn-tab tab-red active">Pendientes</button>
                    <button class="btn btn-tab tab-yellow">Creadas por mí</button>
                    <button class="btn btn-tab tab-green">Resueltas</button>
                </div>

                <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-2 flex-shrink-0">
                    <h6 class="text-muted fw-bold m-0">Listado de tareas pendientes</h6>
                    <button class="btn btn-link text-secondary p-0"><i class="bi bi-filter-right fs-4"></i></button>
                </div>

                <div class="task-list overflow-auto flex-grow-1 pe-2">
                    @foreach (var tarea in TareasList)
                    {
                        <div class="task-item p-3 border-bottom @(tarea.Id == "INV0010" ? "active-task" : "")">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="fw-bold text-dark text-truncate">@tarea.Departamento - @tarea.Usuario</span>
                                <span class="text-muted x-small">@tarea.Fecha</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="text-primary fw-bold small me-1">@tarea.Id</span>
                                    <span class="text-secondary small text-truncate d-inline-block" style="max-width: 150px;">@tarea.Asunto</span>
                                </div>
                                <span class="badge bg-light text-secondary border fw-normal">@tarea.EstadoTiempo</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-8 h-100">
            <div class="card white-card h-100 d-flex flex-column p-0 overflow-hidden">
                
                <div class="p-4 border-bottom bg-white flex-shrink-0">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h5 class="fw-bold text-dark mb-1">
                                Discusión de tarea: <span class="text-primary">INV0010</span> - Producto dañado.
                            </h5>
                            <p class="text-muted small m-0">
                                Tarea para <span class="fw-bold text-dark">Compras</span> iniciada por <span class="fw-bold text-dark">Almacén</span>
                            </p>
                        </div>
                        <div class="text-end">
                            <div class="small"><span class="text-muted">Estado:</span> <span class="text-success fw-bold">Abierta</span></div>
                        </div>
                    </div>
                </div>

                <div class="chat-area flex-grow-1 p-4 overflow-auto bg-light">
                    
                    <div class="chat-message d-flex gap-3 mb-4">
                        <div class="avatar bg-info bg-opacity-25 text-info"><i class="bi bi-person-fill"></i></div>
                        <div class="message-content w-100">
                            <div class="fw-bold text-dark mb-1">Almacén - Elizabeth Cuevas</div>
                            <p class="text-dark mb-2">Adjunto las imágenes necesarias.</p>
                            <div class="row g-2 mb-2" style="max-width: 500px;">
                                <div class="col-6"><div class="img-placeholder gradient-1"></div></div>
                                <div class="col-6"><div class="img-placeholder gradient-2"></div></div>
                            </div>
                        </div>
                    </div>

                    <div class="chat-message d-flex gap-3 mb-4">
                        <div class="avatar bg-danger bg-opacity-10 text-danger"><i class="bi bi-person-fill"></i></div>
                        <div class="message-content w-100 border-top pt-3">
                            <div class="fw-bold text-dark mb-1">Compras - Rebeca Evangelista</div>
                            <p class="text-dark mb-1">Recibido. Se hizo la solicitud al proveedor.</p>
                        </div>
                    </div>

                </div>

                <div class="p-3 bg-white border-top position-relative flex-shrink-0">
                    <div class="input-group bg-light rounded-pill p-1 border">
                        <span class="input-group-text bg-transparent border-0 ps-3">
                            <div class="avatar-small bg-danger bg-opacity-10 text-danger"><i class="bi bi-person-fill"></i></div>
                        </span>
                        <input type="text" class="form-control bg-transparent border-0 shadow-none" placeholder="Escribir comentario...">
                        <button class="btn btn-dark rounded-pill px-4 ms-1">Responder</button>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

@code {
    public class Tarea
    {
        public required string Id { get; set; }
        public required string Departamento { get; set; }
        public required string Usuario { get; set; }
        public required string Asunto { get; set; }
        public required string Fecha { get; set; }
        public required string EstadoTiempo { get; set; }
    }

    private List<Tarea> TareasList = new List<Tarea>
    {
        new Tarea { Id = "INV0005", Departamento = "Almacén", Usuario = "Elizabeth Cuevas", Asunto = "Actualizar número de guía...", Fecha = "YYYY/MM/DD", EstadoTiempo = "1 día" },
        new Tarea { Id = "INV00124", Departamento = "Almacén", Usuario = "David Aguilar", Asunto = "Producto perdido, procesar...", Fecha = "YYYY/MM/DD", EstadoTiempo = "4h" },
        new Tarea { Id = "INV0010", Departamento = "Logística", Usuario = "Elizabeth Cuevas", Asunto = "Producto dañado, solicitar...", Fecha = "YYYY/MM/DD", EstadoTiempo = "1 día" },
        new Tarea { Id = "INV0011", Departamento = "Ventas", Usuario = "Juan Perez", Asunto = "Error en precio...", Fecha = "YYYY/MM/DD", EstadoTiempo = "2h" },
        new Tarea { Id = "INV0012", Departamento = "Ventas", Usuario = "Ana Lopez", Asunto = "Devolución cliente...", Fecha = "YYYY/MM/DD", EstadoTiempo = "5h" },
    };
}