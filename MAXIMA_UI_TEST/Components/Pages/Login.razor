@page "/"
@layout MAXIMA_UI_TEST.Components.Layout.EmptyLayout
@rendermode InteractiveServer
@using MaximaDesignSystem
@using MaximaDesignSystem.MB_Library
@inject NavigationManager Navigation

<div class="container-fluid h-100 p-0">
    <div class="row g-0 h-100">
        
        <div class="col-lg-5 d-none d-lg-flex flex-column justify-content-center align-items-center branding-section">
            <div class="text-center text-white px-5">
                <div class="mb-4 d-flex justify-content-center">
                    <div class="logo-circle bg-white text-dark d-flex align-items-center justify-content-center shadow">
                        <i class="bi bi-box-seam-fill fs-1"></i>
                    </div>
                </div>
                <h1 class="fw-bold display-5 mb-3">Maxima App</h1>
                <p class="lead opacity-75">Logistica is what we do.</p>
            </div>
            
            <div class="circle-decor circle-1"></div>
            <div class="circle-decor circle-2"></div>
        </div>

        <div class="col-lg-7 d-flex align-items-center justify-content-center bg-white">
            <div class="login-form-container p-5 animate-fade-in">
                
                <div class="mb-5">
                    <h2 class="fw-bold text-dark mb-1">Bienvenido de nuevo</h2>
                    <p class="text-muted">Ingresa tus credenciales para acceder a tu cuenta.</p>
                </div>

                <form>
                    <div class="mb-4">
                        <label class="form-label fw-bold small text-secondary text-uppercase">Correo Electrónico</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-envelope"></i></span>
                            <input type="email" class="form-control bg-light border-start-0 ps-0 py-2" placeholder="usuario@maxima.com">
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between">
                            <label class="form-label fw-bold small text-secondary text-uppercase">Contraseña</label>
                            <a href="#" class="small text-primary text-decoration-none">¿Olvidaste tu contraseña?</a>
                        </div>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-lock"></i></span>
                            <input type="password" class="form-control bg-light border-start-0 ps-0 py-2" placeholder="••••••••">
                        </div>
                    </div>

                    <div class="d-grid gap-2 mb-4">
                        <MbButton Color="MbButton.ButtonColor.Dark" Class="py-3 rounded-pill shadow-sm" OnClick="IniciarSesion" type="button">
                            <span class="fs-6">Iniciar Sesión</span> <i class="bi bi-arrow-right ms-2"></i>
                        </MbButton>
                    </div>

                    <div class="text-center text-muted small">
                        ¿No tienes una cuenta? <a href="#" class="text-dark fw-bold text-decoration-none">Contacta al administrador</a>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>

@code {
    private void IniciarSesion()
    {
        Navigation.NavigateTo("Home");
    }
}