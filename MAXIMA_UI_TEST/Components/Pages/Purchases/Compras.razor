@page "/Compras_dashboard"
@rendermode InteractiveServer
@using MaximaDesignSystem
@inject NavigationManager Navigation

<div class="dashboard-container">

    <div class="left-column">
        <div class="card white-card tall-card">
            <div class="p-3 border-bottom">
                <h3 class="card-title-dark mb-0">Centro de acciones y alertas</h3>
            </div>

            <div class="d-flex flex-column flex-grow-1 p-3">
                @if (Alertas.Any())
                {
                    <div class="list-group list-group-flush w-100">
                        @foreach (var alerta in Alertas)
                        {
                            <div class="list-group-item border-0 px-0 py-3 d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    <span class="rounded-circle me-3" style="width: 12px; height: 12px; background-color: @alerta.Color;"></span>
                                    <span class="fw-bold me-2 fs-5">@alerta.Cantidad</span>
                                    <span class="text-muted">@alerta.Mensaje</span>
                                </div>
                                <button class="btn btn-sm btn-outline-secondary rounded-pill px-3">@alerta.Accion</button>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert-placeholder">
                        No hay alertas nuevas.
                    </div>
                }
            </div>
        </div>
    </div>


    <div class="right-column">

        <div class="stats-grid">
            <div class="card dark-card stat-card">
                <span class="stat-label">Valor Compras</span>
                <span class="stat-value">$250K</span>
            </div>
            <div class="card dark-card stat-card">
                <span class="stat-label">Órdenes de compra</span>
                <span class="stat-value">150</span>
            </div>
            <div class="card dark-card stat-card">
                <span class="stat-label">Proveedores</span>
                <span class="stat-value">25</span>
            </div>
            <div class="card dark-card stat-card">
                <span class="stat-label">Suscripciones activas</span>
                <span class="stat-value">5</span>
            </div>
        </div>

        <div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="section-header mb-0">Operaciones</h4>
                <span class="badge bg-dark rounded-pill px-3 py-2">Atajos Frecuentes</span>
            </div>
            
            <div class="shortcuts-grid">
                <button class="card white-card shortcut-btn">
                    <div class="icon-container blue-icon">
                        <i class="bi bi-journal-text fs-2"></i>
                    </div>
                    <span>Catálogo</span>
                </button>

                <button class="card white-card shortcut-btn">
                    <div class="icon-container green-icon position-relative">
                        <i class="bi bi-box-seam fs-2"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success p-1" style="font-size:0.5em;">+</span>
                    </div>
                    <span>Reg. Producto</span>
                </button>

                <button class="card white-card shortcut-btn" @onclick="IrARegistro">
                    <div class="icon-container green-icon position-relative">
                        <i class="bi bi-cart-plus fs-2"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success p-1" style="font-size:0.5em;">+</span>
                    </div>
                    <span>Reg. Compra</span>
                </button>

                <button class="card white-card shortcut-btn">
                    <div class="icon-container orange-icon">
                        <i class="bi bi-truck fs-2"></i>
                    </div>
                    <span>Traslados</span>
                </button>
            </div>
        </div>

        <div class="card white-card h-100">
            <h3 class="card-title-dark mb-3">Compras Automáticas (Suscripciones)</h3>
            
            <MbTable Items="Suscripciones" Class="table-borderless table-hover align-middle">
                <HeaderContent>
                    <th class="text-secondary fw-normal ps-3">Producto</th>
                    <th class="text-secondary fw-normal">Proveedor</th>
                    <th class="text-secondary fw-normal text-center">Cant.</th>
                    <th class="text-secondary fw-normal text-center">Frecuencia</th>
                    <th class="text-secondary fw-normal text-center">Fecha</th>
                </HeaderContent>

                <RowTemplate Context="sub">
                    <td class="fw-bold ps-3">@sub.Producto</td>
                    <td class="text-muted">@sub.Proveedor</td>
                    <td class="fw-bold text-center">@sub.Cantidad</td>
                    <td class="text-muted text-center">@sub.Frecuencia</td>
                    <td class="text-muted text-center">@sub.FechaCompra.ToShortDateString()</td>
                </RowTemplate>
            </MbTable>
        </div>

    </div>
</div>

@code {
    private void IrARegistro()
    {

        Navigation.NavigateTo("/Registro-compras");
    }

    public class AlertaItem
    {
        public string? Color { get; set; } 
        public int Cantidad { get; set; }
        public string? Mensaje { get; set; }
        public string? Accion { get; set; }
    }

    public class SuscripcionItem
    {
        public string? Producto { get; set; }
        public string? Proveedor { get; set; }
        public int Cantidad { get; set; }
        public string? Frecuencia { get; set; }
        public DateTime FechaCompra { get; set; }
    }

    private List<AlertaItem> Alertas = new List<AlertaItem>
    {
        new AlertaItem { Color = "#dc3545", Cantidad = 2, Mensaje = "Incidencias con proveedor", Accion = "Gestionar" },
        new AlertaItem { Color = "#dc3545", Cantidad = 6, Mensaje = "Retrasos en entrega", Accion = "Ver envíos" },
        new AlertaItem { Color = "#ffc107", Cantidad = 45, Mensaje = "Compras sin Guía", Accion = "Añadir Guía" }
    };

    private List<SuscripcionItem> Suscripciones = new List<SuscripcionItem>
    {
        new SuscripcionItem { Producto = "Echo Dot", Proveedor = "Amazon", Cantidad = 100, Frecuencia = "Mensual", FechaCompra = DateTime.Now },
        new SuscripcionItem { Producto = "Monitor LG", Proveedor = "BestBuy", Cantidad = 10, Frecuencia = "Trimestral", FechaCompra = DateTime.Now.AddDays(5) },
        new SuscripcionItem { Producto = "Cable HDMI", Proveedor = "Walmart", Cantidad = 50, Frecuencia = "Mensual", FechaCompra = DateTime.Now.AddDays(12) },
    };
}