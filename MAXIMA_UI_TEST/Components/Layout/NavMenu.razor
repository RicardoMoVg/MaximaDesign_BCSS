@using MaximaDesignSystem

<div class="d-flex flex-column h-100 px-3 py-4" style="background-color: #1A202C; min-height: 100vh;">

    <div class="mb-4 px-2 d-flex align-items-center">
        <div class="rounded me-3 d-flex align-items-center justify-content-center shadow-sm"
             style="width: 40px; height: 40px; background: linear-gradient(135deg, #3B82F6, #6366F1); color: white;">
            <i class="bi bi-grid-1x2-fill fs-5"></i>
        </div>

        <div class="d-flex flex-column">
            <span class="fw-bold text-white h5 m-0" style="letter-spacing: 1px;">MAXIMA</span>
            <span class="text-secondary" style="font-size: 0.7rem; letter-spacing: 0.5px; font-weight: 500;">APP</span>
        </div>
    </div>

    <hr class="border-secondary opacity-25 mb-4 mx-2" />

    <nav class="nav flex-column flex-grow-1 gap-1">

        <BotonNavegacion Texto="Inicio" UrlDestino=""
                         IconoClass="bi bi-grid-fill"
                         ClaseColor="btn-formal-dark" />

        <BotonNavegacion Texto="Productos" UrlDestino="Products_dashboard"
                         IconoClass="bi bi-box-seam-fill"
                         ClaseColor="btn-formal-dark" />

        <BotonNavegacion Texto="Compras" UrlDestino="Compras"
                         IconoClass="bi bi-cart-fill"
                         ClaseColor="btn-formal-dark" />

        <BotonNavegacion Texto="Ventas" UrlDestino="Ventas_dashboard"
                         IconoClass="bi bi-graph-up-arrow"
                         ClaseColor="btn-formal-dark" />

        <BotonNavegacion Texto="Almacén" UrlDestino="Storage"
                         IconoClass="bi bi-archive-fill"
                         ClaseColor="btn-formal-dark" />

        <BotonNavegacion Texto="Problemas" UrlDestino="Problems"
                         IconoClass="bi bi-exclamation-triangle-fill"
                         ClaseColor="btn-formal-dark" />

    </nav>

    <div class="mt-auto px-2 pt-3 border-top border-secondary border-opacity-25">
        <BotonNavegacion Texto="Cerrar sesión" UrlDestino="logout"
                         IconoClass="bi bi-box-arrow-right"
                         ClaseColor="btn-formal-dark" />
    </div>

</div>